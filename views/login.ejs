<!DOCTYPE html>
<html lang="en">
<!-- head --> 
<%- include('./partials/head', {title: title}) %>
<!-- /head -->
<body>
    <!-- header --> 
    <%- include('./partials/header') %>
    <!-- /header -->
    <main>
        <section class="main-login-register container">
            <h1>Inicia sesión</h1>
            <div id="login-register container">
                <form action="/login" method="POST" class="form-login row">
                    <div class="col-6">
                        <div class="form-control-register">
                            <label for="email">Correo electrónico</label>
                            <input type="email" name="email" placeholder="Correo electrónico" minlength="8" value="<%=locals.oldData ? oldData.email : ''%>">
                        </div>
                        <% if (locals.errors && errors.email) { %>
                            <p class="errors-style"> <%= errors.email.msg %> </p>
                        <% } %>
                    </div>

                    <div class="col-6">
                        <div class="form-control-register">
                            <label for="password">Contraseña</label>
                            <input type="password" name="password" placeholder="Contraseña" minlength="8">
                        </div>
                        <% if (locals.errors && errors.password) { %>
                            <p class="errors-style"> <%= errors.password.msg %> </p>
                        <% } %>
                    </div>

                    <div class=" col-12 row d-flex justify-content-center text-center">
                        <div class="form-control-login remember-user col-6">
                            <input type="checkbox" name="remember_user" id="remember_user">
                            <label for="remember_user"> Recordar mi Usuario</label>
                        </div>

                        <div class="form-control-login col-6">
                            <a href="/user/register">¿No eres miembro? Únete</a>
                        </div>
                    </div>
                    <div id="button-register">
                        <button class="file-button" type="submit">Inicia sesión</button>
                    </div>
                </form>
            </div>
        </section>
    </main>
    <!-- footer -->
    <%- include('./partials/footer') %>
    <!-- /footer -->
</body>
</html>