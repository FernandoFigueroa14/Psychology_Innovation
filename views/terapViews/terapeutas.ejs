<!DOCTYPE html>
<html lang="en">
<!-- head --> 
<%- include('../partials/head', {title: title}) %>
<!-- /head -->
<body>
    <!-- header --> 
    <%- include('../partials/header') %>
    <!-- /header -->
    <main class="container-sm">
        <h1>Encuentra el mejor Psicologo para ti</h1>
        <section class="row">
            <% terapeutas.forEach(terapeuta => { %>
                <article class="col-12 p-3">
                    <div class="container bg-light border border-secondary rounded p-3">
                        <div class="row">
                            <div class="col-7 d-flex align-items-center">
                                <!-- <%= terapeuta.linkImagen%> -->
                                <div class="container" style="border-right: gainsboro 1px solid;">
                                    <div class="row">
                                        <div class="col-5 d-flex flex-column justify-content-center align-items-center">
                                            <img width="70%" class="img-fluid py-3" style="border-radius: 50%;" src="images/profilePicTerap/<%= terapeuta.linkImagen%>" alt="img-terap">
                                            <button type="button" class="btn btn-primary py-2">
                                                Agendar
                                            </button>
                                        </div>
                                        
                                        <div class="col-7">
                                            <div>
                                                <h5><%= `${terapeuta.nombres} ${terapeuta.apellidos}` %></h5>
                                                
                                                <p style="color: gray;">TERAPEUTA PROFESIONAL</p>

                                                <h6 style="color: gray;">CÉDULA PROFESIONAL</h6>
                                                <p><%= terapeuta.cedula%></p>
                                                
                                                <h6 style="color: gray;">ESPECIALIDADES</h6>
                                                <ul>
                                                    <%const especialidades = terapeuta.especialidades.split(",");%>
                                                    <% especialidades.forEach(especialidad => { %>
                                                        <li><%=especialidad%></li>
                                                    <%})%>
                                                </ul>
                                                
                                                

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                            </div>

                            <div class="col-5">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-12 d-flex justify-content-between px-5">
                                            <h5 onclick="video(this)" class="selected">Video</h5><h5 class="no-selected" onclick="descrip(this)">Descripción</h5><h5 class="no-selected" onclick="dispo(this)">Disponibilidad</h5>
                                        </div>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-center pt-3">
                                    <video class="rounded" width="75%" height="100%" controls>
                                        <source src="images/videos/<%= terapeuta.linkVideo%>" type="video/mp4">
                                      Your browser does not support the video tag.
                                    </video>
                                </div>
                            </div>

                        </div>
                    </div>
                </article>
            <%})%>
        </section>
    </main>
    <!-- footer -->
    <%- include('../partials/footer') %>
    <!-- <script src="/js/selected.js"></script> -->
    <script>
        function video(elem){
            elem.classList.add('selected');
            elem.classList.remove('no-selected');
            elem.nextSibling.classList.add('no-selected');
            elem.nextSibling.classList.remove('selected');
            elem.nextSibling.nextSibling.classList.add('no-selected');
            elem.nextSibling.nextSibling.classList.remove('selected');
        }
        function descrip(elem){
            elem.classList.add('selected');
            elem.classList.remove('no-selected');
            elem.nextSibling.classList.add('no-selected');
            elem.nextSibling.classList.remove('selected');
            elem.previousSibling.classList.add('no-selected');
            elem.previousSibling.classList.remove('selected');
        }
        function dispo(elem){
            elem.classList.add('selected');
            elem.classList.remove('no-selected');
            elem.previousSibling.classList.add('no-selected');
            elem.previousSibling.classList.remove('selected');
            elem.previousSibling.previousSibling.classList.add('no-selected');
            elem.previousSibling.previousSibling.classList.remove('selected');
        }
    </script>
    <!-- /footer -->
</body>
</html>